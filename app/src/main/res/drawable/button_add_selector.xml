<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="@color/color_gray_d8"/>
            <padding
                android:bottom="20dp"
                android:left="50dp"
                android:right="50dp"
                android:top="20dp" />
        </shape>
</item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="@color/color_blue_22"/>
            <padding
                android:bottom="20dp"
                android:left="50dp"
                android:right="50dp"
                android:top="20dp" />
        </shape>
    </item>
</selector>