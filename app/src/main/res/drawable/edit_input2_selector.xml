<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <!--<solid android:color="@android:color/transparent"></solid>-->
            <stroke android:width="2dp" android:color="@color/color_gray_b5"></stroke>
            <padding
                android:bottom="15dp"
                android:left="15dp"
                android:right="15dp"
                android:top="15dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <!--<solid android:color="#00000000" />-->
            <stroke android:width="2dp" android:color="@color/color_blue_f7"></stroke>
            <padding
                android:bottom="15dp"
                android:left="15dp"
                android:right="15dp"
                android:top="15dp" />
        </shape>
    </item>
</selector>