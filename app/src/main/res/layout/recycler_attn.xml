<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/recycler_contacts_content"
    android:focusable="true">
        <LinearLayout
            android:id="@+id/recycler_contacts_rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:layout_marginRight="100dp"
            android:background="@drawable/relative_attn_background"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp">
                <ImageView
                    android:id="@+id/recycler_contacts_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/attn"
                    android:layout_weight="1"
                    android:duplicateParentState="true"/>
                <TextView
                    android:id="@+id/recycler_contacts_phone"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:scrollbars="vertical"
                    android:singleLine="true"
                    android:maxLines="11"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit = "marquee_forever"
                    android:textColor="@color/color_white"
                    android:textSize="32sp"/>
                <ImageView
                    android:id="@+id/recycler_contacts_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:layout_weight="1"
                    android:src="@mipmap/record_callout"/>

                <TextView
                    android:id="@+id/recycler_contacts_status2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:layout_marginLeft="20dp"
                    android:textSize="28sp"
                    android:textColor="@color/color_white"
                    android:layout_weight="1"
                   />
                <TextView
                    android:id="@+id/recycler_contacts_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:layout_marginLeft="120dp"
                    android:textSize="28sp"
                    android:layout_weight="2"
                    android:textColor="@color/color_white"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/recycler_contacts_rl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:background="@drawable/relative_attn_background"
            android:layout_toRightOf="@+id/recycler_contacts_rl1">

        </RelativeLayout>
</RelativeLayout>