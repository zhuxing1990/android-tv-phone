<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="160dp"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:id="@+id/relative_attn_ct"
    android:focusable="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:duplicateParentState="true"
        android:background="@drawable/relative_attn_background">
        <RelativeLayout
            android:id="@+id/relative_attn_rl0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp">
            <ImageView
                android:id="@+id/recycler_attn_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:focusable="false"
                android:src="@mipmap/attn" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative_attn_rl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/relative_attn_rl0"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/recycler_attn_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:duplicateParentState="true"
                android:focusable="false"
                android:textColor="@android:color/white"
                android:text="姓名"/>
            <TextView
                android:id="@+id/recycler_attn_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:focusable="false"
                android:duplicateParentState="true"
                android:layout_below="@+id/recycler_attn_name"
                android:text="号码"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>