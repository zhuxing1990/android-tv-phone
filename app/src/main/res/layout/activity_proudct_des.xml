<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vunke.videochat.ui.ProductDesActivity">
    <RelativeLayout
        android:id="@+id/productdes_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/product_description">

    </RelativeLayout>
    <Button
        android:id="@+id/productdes_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="32sp"
        android:text="@string/next"
        android:background="@drawable/button_calltime_selector"
        android:textColor="@drawable/text_calltime_selector"
        android:layout_marginBottom="70dp"/>
</RelativeLayout>
