<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/dialog_miss_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:text="温馨提示:您有一个未接电话"/>
    <TextView
        android:id="@+id/dialog_miss_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="电话号码:"
        android:textSize="28sp"
        android:layout_below="@+id/dialog_miss_info"/>
   <RelativeLayout
       android:id="@+id/dialog_miss_rl"
       android:layout_width="400dp"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="10dp"
       android:layout_below="@+id/dialog_miss_number">
       <Button
           android:id="@+id/dialog_miss_call"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="24sp"
           android:text="回拨"/>
       <Button
           android:id="@+id/dialog_miss_cancel"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:textSize="24sp"
           android:text="取消"/>
   </RelativeLayout>
</RelativeLayout>